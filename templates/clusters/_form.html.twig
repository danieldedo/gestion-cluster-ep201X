{{ form_start(form) }}
    {# {{ form_widget(form) }} #}
    <fieldset class="p-lg-6 container border">
        <legend>Renseignements</legend>
        {# <div> #}
            <div class="row">
                <div class="col-sm-12">
                    {{ form_label(form.filiere) }}
                    {{ form_widget(form.filiere) }}
                </div>
            </div>
            <div class="row">
                <div class=" col-6">
                    {{ form_label(form.departement) }}
                    {{ form_widget(form.departement) }}
                </div>
                <div class="col-6">
                    {{ form_label(form.commune) }}
                    {{ form_widget(form.commune) }}
                </div>
            </div>
    
            <div class="row">
                <div class=" col-6">
                    {{ form_label(form.arrondissement) }}
                    {{ form_widget(form.arrondissement) }}
                </div>
                <div class="col-6">
                    {{ form_label(form.village) }}
                    {{ form_widget(form.village, {'attr': {'disabled': true}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom) }}
                </div>
            </div>           
            <div class="m-5">
                <button class="btn save me-2">{{ button_label|default('Enregister') }}</button>
                <button type="button" class="btn annuler" onclick="window.history.back();">Annuler</button>
            </div>
        {# </div> #}
    </fieldset>
{{ form_end(form) }}
